        <%- include('../partials/header'); %>
        <body>
            <main>
                <form class="Register-form" action="/products/<%= product.id %>/edit" method="post">
                    <section class="prod-new-total-container">


                        <!-- <div class="new-arrow">
                            <a href="javascript: history.go(-1)"
                                class="go-back-prod-detail animate__animated animate__flash">
                                << /a>
                        </div>
                    lo comente porque se rompia -->
                        <div class="new-title animate__animated animate__flash">
                            <div class="new-title-title "> Agrega y Edita tus productos</div>
                        </div>

                        <div class="container-new-prod">
                            <div class="new-name new-position-text">
                                <label for="">Nombre</label>
                            </div>
                            <div class="new-add-name">
                                <textarea name="nombre" rows="4" cols="45"><%= product.nombre %></textarea>
                            </div>
                            <div class="new-desc new-position-text">
                                <label for="">Descripcion</label>
                            </div>
                            <div class="new-add-desc">
                                <textarea name="descripcion" rows="4" cols="45"><%= product.descripcion %></textarea>
                            </div>
                            <div class="new-detail new-position-text">
                                <label for="">Detalle</label>
                            </div>
                            <div class="new-add-detail">
                                <textarea name="detalle" rows="4" cols="45"><%= product.detalle %></textarea>
                            </div>
                            <div class="new-pics new-position-text">
                                <label for="">Imagenes</label>
                            </div>
                            <div class="new-add-pics">
                                <input type="file" multiple id="gallery-photo-add">
                                <div class="gallery"></div>
                                <div class="new-gallery-pic"><i class="far fa-image"></i></div>
                                <div class="new-gallery-pic"><i class="far fa-image"></i></div>
                                <div class="new-gallery-pic"><i class="far fa-image"></i></div>
                                <div class="new-gallery-pic"><i class="far fa-image"></i></div>
                            </div>
                            <div class="new-stock new-position-text">
                                <label for="">Cantidad</label>
                            </div>
                            <div class="new-add-stock">
                                <textarea name="cantidad" rows="4" cols="45"><%= product.cantidad %></textarea>
                            </div>
                            <div class="new-price new-position-text">
                                <label for="">Precio</label>
                            </div>
                            <div class="new-add-price">
                                <textarea name="precio" rows="4" cols="45"><%= product.precio %></textarea>
                            </div>

                            <div class="new-disc new-position-text">
                                <label for="">Descuento</label>
                            </div>
                            <div class="new-add-disc">
                                <textarea name="descuento" rows="4" cols="45"><%= product.descuento %></textarea>
                            </div>
                            <div class="new-ship new-position-text">
                                <label for="">Envio</label>
                            </div>
                            <div class="new-add-ship">
                                <textarea name="envio" rows="4" cols="45"><%= product.envio %></textarea>
                            </div>
                            <div class="new-cont-button">
                                <input type="submit" value="Enviar" class="new-button">
                            </div>
                        </div>


                    </section>
                </form>
            </main>
    </body>
