                        <div class="prod-filter-title">
                            <p>Filtros</p>
                        </div>
                        <div class="prod-filter-search">
                            <form action="#" class="sidebar-search-form">
                                <input class="sidebar-search-input" type="text" placeholder="Buscar.." name="search">
                            </form>
                        </div>
                        <div class="prod-filter-categories">
                            <p>Categorias</p>
                            <ul class="prod-filter-categories-list">
                                <ul><span class="prod-filter-categories-list-cat">Partes</span> <span
                                        class="prod-filter-categories-list-cat-num">(140)</span></ul>
                                <li><span class="prod-filter-categories-list-cat-prod">Microprocesadores</span> <span
                                        class="prod-filter-categories-list-cat-prod-num">(10)</span></li>
                                <li><span class="prod-filter-categories-list-cat-prod">Coolers</span> <span
                                        class="prod-filter-categories-list-cat-prod-num">(20)</span></li>
                                <li><span class="prod-filter-categories-list-cat-prod">Gabinetes</span> <span
                                        class="prod-filter-categories-list-cat-prod-num">(5)</span></li>
